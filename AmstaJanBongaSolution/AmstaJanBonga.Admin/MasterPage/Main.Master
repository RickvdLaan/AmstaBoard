<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Main.master.cs" Inherits="AmstaJanBonga.Admin.MasterPage.Main" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head runat="server">
        <title></title>

        <link href="~/Includes/Css/StyleSheet.css" rel="stylesheet" />
        <link href="~/Includes/Css/Addons.css" rel="stylesheet" />
        <link href="~/Includes/Css/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />

        <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,400italic,600' rel='stylesheet' type='text/css' />

        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
        <script type="text/javascript" src="https://adminjanbonga.jouwsoftware.nl/Includes/js/load-screen.js"></script>

        <asp:ContentPlaceHolder ID="_cphHead" runat="server"></asp:ContentPlaceHolder>

        <meta charset="UTF-8" />
        <meta name="robots" content="noindex, nofollow" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    </head>

    <body>
        <form id="form1" runat="server">      
            <!-- Sidebar -->
            <div id="sidebar-container">
                <div class="logo-container">
                    <!-- Logo -->
                    <asp:LinkButton runat="server" ID="_lbDashboard" OnClick="_lbDashboard_Click">
                        <asp:Image runat="server" ID="logo" ImageUrl="~/Includes/Css/Images/logo.svg" AlternateText="Amsta" />
                    </asp:LinkButton>
                </div>

                <!-- Mobile -->
                <div id="navigation-container">
                    <div id="mobile-menu">
                        <div id="slicknav_menu">
                            <%--<span class="slicknav_icon-bar"></span>
                            <span class="slicknav_icon-bar"></span>
                            <span class="slicknav_icon-bar"></span>
                            <i class="fa fa-bars" aria-hidden="true"></i>--%>
                        </div>
                    </div>
    
                    <!-- Menu -->
                    <asp:BulletedList runat="server" ID="nav" DisplayMode="HyperLink">
                        <asp:ListItem runat="server" id="_liDashboard" Value="~/Dashboard">Dashboard</asp:ListItem>
                        <asp:ListItem runat="server" id="_liUser" Value="~/Content/Secure/User/UserOverview.aspx">Gebruikers</asp:ListItem>
                        <asp:ListItem runat="server" id="_liStaff" Value="~/Content/Secure/Employee/EmployeeOverview.aspx">Medewerkers</asp:ListItem>
                        <asp:ListItem runat="server" id="_liLivingroom" Value="~/Content/Secure/Livingroom/LivingroomOverview.aspx">Woonkamers</asp:ListItem>
                        <asp:ListItem runat="server" id="_liPatient" Value="~/Content/Secure/Patient/PatientOverview.aspx">Bewoners</asp:ListItem>
                    </asp:BulletedList>
                </div>
            </div>

            <!-- Header -->
            <div id="header-container" class="orange-bg">
		        <h1>
                    <asp:ContentPlaceHolder ID="_cphMainTitle" runat="server" />
		        </h1>
		        <h2>
			        <asp:ContentPlaceHolder ID="_cphSubTitle" runat="server" />
		        </h2>

                <div id="user">           
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <span>
                        Ingelogd als, <%= this.Username %>
                    </span>

                    <asp:LinkButton runat="server" ID="_lbSignOut" OnClick="_lbSignOut_Click">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        <span>Uitloggen</span>
                    </asp:LinkButton>
                </div>      
            </div>  

            <!-- Content -->
            <div id="content">    
                <!-- Explanation -->
                <div class="box">
                    <h2>Uitleg over deze module</h2>

                    <span>
                        <asp:ContentPlaceHolder ID="_cphExplanation" runat="server"></asp:ContentPlaceHolder>
                    </span>
                </div>

                <!-- Content -->
                <asp:ScriptManager runat="server" />
                <asp:ContentPlaceHolder ID="_cphContent" runat="server"></asp:ContentPlaceHolder>
            </div>

             <div class="loading">
                <small>Aan het laden...</small>
                <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
            </div>
        </form>
    </body>
</html>
